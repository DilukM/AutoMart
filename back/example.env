# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_DATABASE=automart

## SSL (enable for managed DBs that require TLS, e.g., PlanetScale, AWS RDS)
## Set DB_SSL=true to enable SSL. Provide CA only if your provider requires it.
DB_SSL=false
# If your provider uses a public certificate chain (e.g., PlanetScale), leave CA unset.
# For providers requiring CA (e.g., AWS RDS), paste the PEM with \n for newlines.
# Example:
# DB_SSL_CA=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# AI Service Configuration
AI_SERVICE=openai
# Options: openai, gemini

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

